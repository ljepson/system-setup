# System Setup Configuration Example
# Copy this file to one of these locations:
#   - ./system_setup.yaml (current directory)
#   - ~/.system_setup.yaml (home directory)
#   - ~/.config/system_setup.yaml (config directory)
#
# Or specify with: setup.py --config /path/to/config.yaml

# Package configuration
packages:
  # Additional packages to install beyond the defaults
  # These will be installed using the platform's package manager
  additional_packages:
    - docker          # Container runtime
    - terraform       # Infrastructure as Code
    - kubectl         # Kubernetes CLI
    - ansible         # Automation tool
    # - git-lfs       # Git Large File Storage
    # - tmux          # Terminal multiplexer

# Security settings
security:
  # Security profile: normal, strict, or reduced
  # - normal: Standard security settings (recommended)
  # - strict: Enhanced security (disables some conveniences)
  # - reduced: Reduced security for development (NOT recommended for production)
  profile: normal

# Chezmoi dotfiles management (recommended)
chezmoi:
  # Git repository URL for dotfiles
  # Can be GitHub shorthand (username/repo) or full URL
  repo: github.com/username/dotfiles
  # repo: git@github.com:username/dotfiles.git

# Legacy dotfiles management (Google Drive)
dotfiles:
  # Google Drive file ID for your dotfiles tarball
  # To get the ID: Share your file -> Copy link -> Extract ID from URL
  # Example URL: https://drive.google.com/file/d/1ijyAcpSGqlYji-ojPBnsSnaMmpj7Dn4D/view
  gdrive_id: YOUR_GOOGLE_DRIVE_FILE_ID_HERE

  # SHA256 checksum of the dotfiles tarball (for verification)
  # Generate with: shasum -a 256 /path/to/dotfiles.tar.gz
  # Set to 'skip' to disable checksum verification
  checksum: skip

  # Require checksum verification (fail if checksum doesn't match)
  checksum_required: false

# Hyprland desktop configuration (Linux only)
hyprland:
  # Enable Hyprland setup
  enabled: true

  # Preferred terminal emulator
  # Options: ghostty, kitty, alacritty, foot, wezterm
  terminal: ghostty

  # Preferred application launcher
  # Options: walker, wofi, rofi, fuzzel, tofi
  launcher: walker

  # Preferred status bar
  # Options: hyprpanel, waybar, ags
  bar: hyprpanel

  # Additional packages to install for Hyprland
  extra_packages:
    - swww          # Animated wallpaper
    - waypaper      # Wallpaper GUI
    - satty         # Screenshot annotation

# Fish shell configuration
fish:
  # Enable Fish shell setup
  enabled: true

  # Set Fish as default shell
  set_default: true

  # Additional Fish plugins to install via Fisher
  plugins:
    # - jorgebucaran/fisher     # Plugin manager (always installed)
    # - IlanCosman/tide@v6      # Tide prompt (always installed)
    # - PatrickF1/fzf.fish      # fzf integration (always installed)
    - jethrokuan/z              # Directory jumping
    # - meaningful-ooo/sponge   # Clean command history
    # - jhillyerd/plugin-git    # Git abbreviations

# Modern CLI tools configuration
modern_tools:
  # Enable modern CLI tools installation
  enabled: true

  # Tools to skip installing (by command name)
  skip:
    # - eza       # ls replacement
    # - bat       # cat replacement
    # - fd        # find replacement
    # - ripgrep   # grep replacement

# Theme configuration
theme:
  # Colorscheme
  # Options: catppuccin-mocha, catppuccin-macchiato, rose-pine, nord, dracula
  colorscheme: catppuccin-mocha

  # Terminal font (must be installed separately)
  font: JetBrainsMono Nerd Font

  # Icon theme
  # Options: Papirus-Dark, Tela-circle-dark, Catppuccin-Mocha
  icons: Papirus-Dark

  # Cursor theme
  # Options: catppuccin-mocha-dark-cursors, Bibata-Modern-Classic
  cursor: catppuccin-mocha-dark-cursors
